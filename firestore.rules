rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;

      match /podcasts/{id} {
        allow read: if true;
        allow write: if false;
      }
      match /posts/{id} {
        allow read: if true;
        allow write: if false;
      }
      match /tutorials/{id} {
        allow read: if true;
        allow write: if false;
      }
      match /courses/{id} {
        allow read: if true;
        allow write: if false;
      }
      match /community/{id} {
        allow read: if true;
        allow write: if false;
      }
    }
  }
}