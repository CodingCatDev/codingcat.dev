rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;

      match /podcasts/{courseId} {
        allow read: if true;
        allow write: if false;
      }
      match /posts/{courseId} {
        allow read: if true;
        allow write: if false;
      }
      match /tutorials/{courseId} {
        allow read: if true;
        allow write: if false;
      }
    }
  }
}